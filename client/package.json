{
	"name": "mern-starter-kit",
	"version": "4.0.0",
	"main": "index.js",
	"description": "A fullstack MERN boilerplate.",
	"repository": "https://github.com/mattcarlotta/fullstack-mern-kit",
	"author": "Matt Carlotta",
	"license": "MIT",
	"private": false,
	"engines": {
		"node": ">=10",
		"npm": ">=6"
	},
	"scripts": {
		"dev": "better-npm-run dev",
		"checkbuild": "es-check  es5 './dist/**/*.js'",
		"initialize": "yarn install",
		"build": "better-npm-run build",
		"stage": "better-npm-run stage",
		"analyze": "better-npm-run analyze",
		"test": "better-npm-run test",
		"test:watch": "better-npm-run test:watch",
		"test:watchall": "better-npm-run test:watchall",
		"test:coverage": "better-npm-run test:coverage",
		"format": "prettier --write 'src/**/*.js'",
		"lintjs": "eslint 'src/**/*.js'",
		"lintstyles": "stylelint **/*.scss",
		"pre-commit": "lint-staged"
	},
	"betterScripts": {
		"dev": {
			"command": "webpack-dev-server",
			"env": {
				"APIPORT": 5000,
				"BASEURL": "http://localhost:8080/api/",
				"NODE_ENV": "development",
				"PORT": 3000
			}
		},
		"build": {
			"command": "rimraf dist && webpack",
			"env": {
				"APIPORT": 8080,
				"BASEURL": "https://example.com/api/",
				"NODE_ENV": "production"
			}
		},
		"stage": {
			"command": "rimraf dist && webpack",
			"env": {
				"APIPORT": 8080,
				"BASEURL": "http://localhost:8080/api/",
				"NODE_ENV": "production",
				"NODE_ENV_DEV": "staging"
			}
		},
		"analyze": {
			"command": "rimraf dist && webpack",
			"env": {
				"APIPORT": 8080,
				"BASEURL": "http://localhost:8080/api/",
				"NODE_ENV": "production",
				"NODE_ENV_DEV": "staging",
				"ANALZYER": true
			}
		},
		"test": {
			"command": "jest --config ./jest.json",
			"env": {
				"NODE_ENV": "testing"
			}
		},
		"test:coverage": {
			"command": "jest --config ./jest.json --coverage",
			"env": {
				"NODE_ENV": "testing"
			}
		},
		"test:watch": {
			"command": "jest --config ./jest.json --watch --onlyChanged",
			"env": {
				"NODE_ENV": "testing"
			}
		},
		"test:watchall": {
			"command": "jest --config ./jest.json --watchAll",
			"env": {
				"NODE_ENV": "testing"
			}
		}
	},
	"lint-staged": {
		"*.{js,jsx}": [
			"eslint --fix",
			"git add"
		],
		"*.scss": [
			"stylelint **/*.scss",
			"git add"
		],
		"*.{json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {
		"axios": "^0.19.0",
		"connected-react-router": "^6.6.1",
		"history": "^4.10.1",
		"lodash": "^4.17.15",
		"prop-types": "^15.7.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-helmet": "^5.2.1",
		"react-icons": "^3.8.0",
		"react-redux": "^7.1.3",
		"react-router-dom": "^5.1.2",
		"react-toastify": "^5.4.1",
		"redux": "^4.0.4",
		"redux-saga": "^1.1.3",
		"styled-components": "^4.4.1"
	},
	"resolutions": {
		"babel-core": "7.0.0-bridge.0",
		"react-helmet/react-side-effect": "2.1.0"
	},
